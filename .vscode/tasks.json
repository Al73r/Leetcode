{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "g++",
            "args": [
                "test.cpp",
                "-o",
                "test.exe"
            ],
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build-debug",
            "command": "g++",
            "args": [
                "-g",
                "test.cpp",
                "-o",
                "test.exe"
            ],
            "type": "shell"
        }
    ]
}